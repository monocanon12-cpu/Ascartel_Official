{
  "name": "ascartel-backend",
  "version": "1.0.0",
  "description": "Backend API pour ASCARTEL - Gestion articles, ventes flash et administration",
  "main": "server.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm install --build-from-source",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-db.js",
    "backup-db": "node scripts/backup-db.js",
    "health-check": "node scripts/health-check.js",
    "test-api": "node scripts/test-api.js",
    "deploy": "./start-production.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ascartel-api",
    "pm2:restart": "pm2 restart ascartel-api",
    "pm2:logs": "pm2 logs ascartel-api",
    "docker:build": "docker build -t ascartel-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": ["ascartel", "ecommerce", "api", "madagascar"],
  "author": "ASCARTEL",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
